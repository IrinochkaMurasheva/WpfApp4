<Window x:Class="SQLiteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
         Title="Товары" Height="300" Width="425">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ListBox x:Name="usersList" ItemsSource="{Binding}" Margin="0,4,0,46" Grid.RowSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>


                        <TextBlock Text="{Binding Name}" FontSize="16" />
                        <TextBlock Text="{Binding Price}" FontSize="13" />
                        <TextBlock Text="{Binding Description}" FontSize="13" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Добавить" Margin="297,229,43,5" Click="Add_Click" Grid.RowSpan="2" />
        <Button Content="Изменить" Margin="182,229,160,5" Click="Edit_Click" Grid.RowSpan="2"  />
        <Button Content="Удалить" Margin="56,229,287,5" Click="Delete_Click" Grid.RowSpan="2"  />


    </Grid>
</Window>